<Window x:Class="Autobazar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Autobazar" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border Background="#2C3E50">
            <TextBlock Text="Autobazar – Karásek"
                       Foreground="White"
                       FontSize="22"
                       VerticalAlignment="Center"
                       Margin="20,0"/>
        </Border>

 
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

           
            <Border Background="White" CornerRadius="8" Padding="10" Margin="0,0,15,0">
                <DataGrid ItemsSource="{Binding Auta}"
                          SelectedItem="{Binding VybraneAuto}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Značka" Binding="{Binding Znacka}" Width="*"/>
                        <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*"/>
                        <DataGridTextColumn Header="SPZ" Binding="{Binding SPZ}" Width="*"/>
                        <DataGridTextColumn Header="Rok" Binding="{Binding RokVyroby}" Width="*"/>
                        <DataGridTextColumn Header="Nájezd" Binding="{Binding Najezd}" Width="*"/>
                    </DataGrid.Columns>

                </DataGrid>
            </Border>

     
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- 0: Nadpis -->
                        <RowDefinition Height="Auto"/> <!-- 1: Znacka -->
                        <RowDefinition Height="Auto"/> <!-- 2: Model -->
                        <RowDefinition Height="Auto"/> <!-- 3: Barva -->
                        <RowDefinition Height="Auto"/> <!-- 4: SPZ -->
                        <RowDefinition Height="Auto"/> <!-- 5: Rok -->
                        <RowDefinition Height="Auto"/> <!-- 6: Palivo -->
                        <RowDefinition Height="Auto"/> <!-- 7: Najezd -->
                        <RowDefinition Height="Auto"/> <!-- 8: Vlastnik - Jmeno -->
                        <RowDefinition Height="Auto"/> <!-- 9: Vlastnik - Prijmeni -->
                        <RowDefinition Height="Auto"/> <!-- 10: Vlastnik - Adresa -->
                        <RowDefinition Height="*"/>    <!-- 11: Tlačítka -->
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Detail vozidla"
                               FontSize="18"
                               FontWeight="Bold"
                               Grid.ColumnSpan="2"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Značka:" Grid.Row="1"/>
                    <TextBox Text="{Binding VybraneAuto.Znacka, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Model:" Grid.Row="2"/>
                    <TextBox Text="{Binding VybraneAuto.Model, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Barva:" Grid.Row="3"/>
                    <TextBox Text="{Binding VybraneAuto.Barva, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1"/>

                    <TextBlock Text="SPZ:" Grid.Row="4"/>
                    <TextBox Text="{Binding VybraneAuto.SPZ, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1"/>

                    <TextBlock Text="Rok výroby:" Grid.Row="5"/>
                    <TextBox Text="{Binding VybraneAuto.RokVyroby, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="1"/>

                    <TextBlock Text="Palivo:" Grid.Row="6"/>
                    <ComboBox Grid.Row="6" Grid.Column="1"
                              SelectedItem="{Binding VybraneAuto.Palivo}">
                        <ComboBoxItem Content="Benzín"/>
                        <ComboBoxItem Content="Nafta"/>
                        <ComboBoxItem Content="Elektro"/>
                        <ComboBoxItem Content="Hybrid"/>
                    </ComboBox>

                    <TextBlock Text="Nájezd (km):" Grid.Row="7"/>
                    <TextBox Text="{Binding VybraneAuto.Najezd, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" Grid.Column="1"/>

                    <!-- VLASTNÍK -->
                    <TextBlock Text="Jméno vlastníka:" Grid.Row="8"/>
                    <TextBox Text="{Binding VybraneAuto.Vlastnik.Jmeno, UpdateSourceTrigger=PropertyChanged}" Grid.Row="8" Grid.Column="1"/>

                    <TextBlock Text="Příjmení vlastníka:" Grid.Row="9"/>
                    <TextBox Text="{Binding VybraneAuto.Vlastnik.Prijmeni, UpdateSourceTrigger=PropertyChanged}" Grid.Row="9" Grid.Column="1"/>

                    <TextBlock Text="Adresa vlastníka:" Grid.Row="10"/>
                    <TextBox Text="{Binding VybraneAuto.Vlastnik.Adresa, UpdateSourceTrigger=PropertyChanged}" Grid.Row="10" Grid.Column="1"/>

                    <!-- TLAČÍTKA -->
                    <StackPanel Grid.Row="11"
                                Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button Content="Přidat" Command="{Binding PridatCommand}"/>
                        <Button Content="Smazat" Command="{Binding SmazatCommand}"/>
                        <Button Content="Uložit" Command="{Binding UlozitCommand}"/>
                    </StackPanel>

                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
